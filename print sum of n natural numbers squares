def sqrnatnum(n):
    total=0
    if n==0:
        return 0
    elif n==1:
        return 1
    else:
        while(n>=1):
            total = total+n**2
            n=n-1
        print(total)



num=int(input("Enter the n value to find the sum of sqaures of first n natural numbers:"))
sqrnatnum(num)
